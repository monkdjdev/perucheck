---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Analytics from '@vercel/analytics/astro';

interface Props {
  title: string;
  description?: string;
  canonical?: string;
}

const {
  title,
  description = 'Tu panel diario con tipo de cambio, pico y placa, calculadoras laborales y mas. Informacion util para Peru actualizada todos los dias.',
  canonical
} = Astro.props;

const siteUrl = 'https://perucheck.com';
const fullTitle = title === 'Inicio' ? 'PeruCheck - Tu panel diario de informacion util' : `${title} | PeruCheck`;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="google-site-verification" content="LN2NF5K9OcLaO6VbBXorVUzrkwJsrqwsNN6ncUydsZE" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {canonical && <link rel="canonical" href={`${siteUrl}${canonical}`} />}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_PE" />
    <meta property="og:site_name" content="PeruCheck" />
    <meta property="og:image" content={`${siteUrl}/og-image.svg`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content={`${siteUrl}/og-image.svg`} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "PeruCheck",
      "url": siteUrl,
      "description": "Tu panel diario con tipo de cambio, pico y placa, calculadoras laborales y mas. Informacion util para Peru actualizada todos los dias.",
      "applicationCategory": "FinanceApplication",
      "operatingSystem": "Web",
      "offers": { "@type": "Offer", "price": "0", "priceCurrency": "PEN" },
      "author": { "@type": "Organization", "name": "PeruCheck", "url": siteUrl }
    })} />

    <!-- PWA -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#6366f1" />

    <!-- Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7524782215145799" crossorigin="anonymous"></script>

    <!-- Dark mode anti-flash -->
    <script is:inline>
      (function() {
        var theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>

    <title>{fullTitle}</title>
    <style>
      body { font-family: 'Inter', system-ui, -apple-system, sans-serif; }
    </style>
  </head>
  <body class="bg-bg text-text min-h-screen flex flex-col">
    <Header />
    <main class="flex-1 w-full max-w-7xl mx-auto px-4 sm:px-6 py-6 sm:py-8">
      <slot />
    </main>
    <Footer />
    <Analytics />
  </body>
</html>
